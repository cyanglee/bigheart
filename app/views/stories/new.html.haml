-#-*- encoding : utf-8 -*-
= simple_form_for @story do |f|
  = f.input :story_name, :input_html => { :class => "form-control input-lg" }, :placeholder => "Story name"
  %h1
    = f.input :appear_day, {:class => "date", :collection => ["星期一","星期二","星期三","星期四","星期五","星期六","星期日"], :selected => "星期一"}
  %h2
    = f.input :am_or_pm, {:class => "am_or_pm", :collection => ["AM","PM"], :selected => "AM"}
    = f.input :appear_time, {:class => "time", :collection => ["12:00-1:00","1:00-2:00","2:00-3:00","3:00-4:00","4:00-5:00","5:00-6:00","6:00-7:00","7:00-8:00","8:00-9:00","9:00-10:00","10:00-11:00","11:00-12:00"], :selected => "12:00-1:00"}
  %h4
    = f.input :appear_location, {:class => "appear_location", :type => "text", :placeholder => "地點"}
  %h5
    = f.input :story, {:class => "form-control input-lg", :type => "text", :placeholder => "Write your story here."}
  %h6
    = f.button :submit, {:class => "btn btn-primary btn-lg disabled", :role => "button"}
    -#= f.file_field :story_pics
