-#-*- encoding : utf-8 -*-
= simple_form_for @story do |f|
  = f.input :story_name, label: false, class: "form-control input-lg", placeholder: "#{@story.story_name}"
  %h1
    = f.input :appear_day, label: false, class: "date", collection: ["星期一","星期二","星期三","星期四","星期五","星期六","星期日", "週一至週日"], selected: "#{@story.appear_day}"
  %h2
    = f.input :appear_time_from, label: false, class: "time", collection: ["1:00","2:00","3:00","4:00","5:00","6:00","7:00","8:00","9:00","10:00","11:00","12:00","13:00","14:00","15:00","16:00","17:00","18:00","19:00","20:00","21:00","22:00","23:00","24:00"], selected: "#{@story.appear_time_from}"
    = f.input :appear_time_to, label: false, class: "time", collection: ["1:00","2:00","3:00","4:00","5:00","6:00","7:00","8:00","9:00","10:00","11:00","12:00","13:00","14:00","15:00","16:00","17:00","18:00","19:00","20:00","21:00","22:00","23:00","24:00"], selected: "#{@story.appear_time_to}"
  %h4
    = f.input :appear_location, label: false, class: "appear_location", type: "text", placeholder: "#{@story.appear_location}"
  %h5
    = f.input :story_details, label: false, class: "form-control input-lg", type: "text", placeholder: "#{@story.story_details}"
  %h6
    = f.button :submit, "完成編輯", label: false, class: "btn btn-primary btn-lg disabled", role: "button"