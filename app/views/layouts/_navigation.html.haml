.navbar.navbar-default.navbar-fixed-top{role: "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "Bigheart", stories_path,class: "navbar-brand"
    .navbar-collapse.collapse
      %ul.nav.navbar-nav
        %li
          = link_to '閱讀所有故事', stories_path
      %ul.nav.navbar-form.navbar-right
        - if user_signed_in?
          %li.dropdown
            %a.dropdown-toggle(href="#" data-toggle="dropdown") #{current_user.name}
            %ul.dropdown-menu
              %li
                = link_to '登出', destroy_user_session_path, :method=>'delete'
              - if current_user.has_role? :admin
                %li
                  = link_to '管理使用者', users_path
                  = link_to '管理文章', users_path
              - else
                %li
                  = link_to '編輯帳號', edit_user_registration_path if current_user.provider.blank?
                %li
                  = link_to '發表文章', new_story_path
                  = link_to '我發佈的文章'
        - else
          = simple_form_for :user, url: 'users/sign_in', :html => { :class => "navbar-right form-inline", :role => "form"} do |f|
            .form-group
              = f.input_field :email, :autofocus => true, class: "form-control", type: "text", placeholder: "email"
            .form-group
              = f.input_field :password, class: "form-control", type: "password", placeholder: "password"
            = f.button :submit, '登入', class: "btn btn-primary btn-sm"
            = link_to "Facebook登入", user_omniauth_authorize_path(:facebook), class: "btn btn-primary btn-sm"
    / /.navbar-collapse